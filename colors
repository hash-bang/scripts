#!/bin/bash
# Import all colors as sane shell variables
# This script is designed to be imported by another script
# Usage: source colors
#
# @author Matt Carter <m@ttcarter.com>
# @date 2020-09-21
#
# @example Output Hello World
# source colors
# echo -e "${COLOR_BLUE}${COLOR_ON_WHITE}Hello${COLOR_RESET}"


# Reset
COLOR_RESET='\033[0m'

# Regular Colors
COLOR_BLACK='\033[0;30m'
COLOR_RED='\033[0;31m'
COLOR_GREEN='\033[0;32m'
COLOR_YELLOW='\033[0;33m'
COLOR_BLUE='\033[0;34m'
COLOR_PURPLE='\033[0;35m'
COLOR_CYAN='\033[0;36m'
COLOR_WHITE='\033[0;37m'

# Bold
COLOR_BBLACK='\033[1;30m'
COLOR_BRED='\033[1;31m'
COLOR_BGREEN='\033[1;32m'
COLOR_BYELLOW='\033[1;33m'
COLOR_BBLUE='\033[1;34m'
COLOR_BPURPLE='\033[1;35m'
COLOR_BCYAN='\033[1;36m'
COLOR_BWHITE='\033[1;37m'

# Underline
COLOR_UBLACK='\033[4;30m'
COLOR_URED='\033[4;31m'
COLOR_UGREEN='\033[4;32m'
COLOR_UYELLOW='\033[4;33m'
COLOR_UBLUE='\033[4;34m'
COLOR_UPURPLE='\033[4;35m'
COLOR_UCYAN='\033[4;36m'
COLOR_UWHITE='\033[4;37m'

# Background
COLOR_ON_BLACK='\033[40m'
COLOR_ON_RED='\033[41m'
COLOR_ON_GREEN='\033[42m'
COLOR_ON_YELLOW='\033[43m'
COLOR_ON_BLUE='\033[44m'
COLOR_ON_PURPLE='\033[45m'
COLOR_ON_CYAN='\033[46m'
COLOR_ON_WHITE='\033[47m'

# High Intensity
COLOR_IBLACK='\033[0;90m'
COLOR_IRED='\033[0;91m'
COLOR_IGREEN='\033[0;92m'
COLOR_IYELLOW='\033[0;93m'
COLOR_IBLUE='\033[0;94m'
COLOR_IPURPLE='\033[0;95m'
COLOR_ICYAN='\033[0;96m'
COLOR_IWHITE='\033[0;97m'

# Bold High Intensity
COLOR_BIBLACK='\033[1;90m'
COLOR_BIRED='\033[1;91m'
COLOR_BIGREEN='\033[1;92m'
COLOR_BIYELLOW='\033[1;93m'
COLOR_BIBLUE='\033[1;94m'
COLOR_BIPURPLE='\033[1;95m'
COLOR_BICYAN='\033[1;96m'
COLOR_BIWHITE='\033[1;97m'

# High Intensity backgrounds
COLOR_ON_IBLACK='\033[0;100m'
COLOR_ON_IRED='\033[0;101m'
COLOR_ON_IGREEN='\033[0;102m'
COLOR_ON_IYELLOW='\033[0;103m'
COLOR_ON_IBLUE='\033[0;104m'
COLOR_ON_IPURPLE='\033[0;105m'
COLOR_ON_ICYAN='\033[0;106m'
COLOR_ON_IWHITE='\033[0;107m'
